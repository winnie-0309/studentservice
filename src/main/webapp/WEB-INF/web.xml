<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<display-name>Student Manager</display-name>
	<servlet>
		<description>This is the description of my J2EE component</description>
		<display-name>This is the display name of my J2EE component</display-name>
		<servlet-name>Login</servlet-name>
		<servlet-class>com.yanran.student.servlet.CheckLogin</servlet-class>
	</servlet>
	<servlet>
		<description>This is the description of my J2EE component</description>
		<display-name>This is the display name of my J2EE component</display-name>
		<servlet-name>Register</servlet-name>
		<servlet-class>com.yanran.student.servlet.Register</servlet-class>
	</servlet>
	<servlet>
		<description>This is the description of my J2EE component</description>
		<display-name>Pic Code Generator</display-name>
		<servlet-name>PicCodeGenerator</servlet-name>
		<servlet-class>com.yanran.student.servlet.PicCodeGenerator</servlet-class>
	</servlet>
	
	<servlet>
		<description>Page</description>
		<display-name>Pic Code Generator</display-name>
		<servlet-name>Page</servlet-name>
		<servlet-class>com.yanran.student.servlet.Page</servlet-class>
	</servlet>
	
	<servlet>
		<description>Action Servlet</description>
		<display-name>Action for student and teacher</display-name>
		<servlet-name>Action</servlet-name>
		<servlet-class>com.yanran.student.servlet.ActionServlet</servlet-class>
	</servlet>
	
	<servlet>
		<description>Home Page</description>
		<display-name>Home Page</display-name>
		<servlet-name>HomePage</servlet-name>
		<servlet-class>com.yanran.student.servlet.HomePage</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/servlet/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Register</servlet-name>
		<url-pattern>/servlet/register</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PicCodeGenerator</servlet-name>
		<url-pattern>/servlet/picCodeGenerator</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>HomePage</servlet-name>
		<url-pattern>/servlet/homePage</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>Page</servlet-name>
		<url-pattern>/servlet/page</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>Action</servlet-name>
		<url-pattern>/servlet/action</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
